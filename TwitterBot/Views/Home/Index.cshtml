@using TwitterBot.Helpers

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <nav class="navbar navbar-expand-md bg-dark navbar-dark fixed-top" ng-controller="navcontroller">
        <i class="fab fa-windows fa-2x twitter mr-2" ng-click="home()"></i>
        <a class="navbar-brand d-none d-sm-block" href="" ng-click="home()">Twitter App (Preview)</a>
        <button ng-show="loggedIn" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="nav navbar-nav mr-auto">
                <li class="nav-item">
                    <a href="" class="nav-link" ng-class="{'active': accountActive}" ng-show="loggedIn" ng-click="account()" ng-bind="accountText"></a>
                </li>
                <li class="nav-item">
                    <a href="" class="nav-link" ng-class="{'active': queueActive}" ng-show="loggedIn" ng-click="queue()" ng-bind="queueText"></a>
                </li>
                <li class="nav-item">
                    <a href="" class="nav-link" ng-class="{'active': tweetActive}" ng-show="loggedIn" ng-click="tweet()" ng-bind="tweetText"></a>
                </li>
                <li class="nav-item">
                    <a href="" class="nav-link" ng-class="{'active': devActive}" ng-show="loggedIn" ng-click="dev()" ng-bind="devText"></a>
                </li>
            </ul>

            <ul class="nav navbar-nav navbar-right ml-auto">
                <li class="nav-item">
                    <span class="navbar-text app-user" ng-show="loggedIn" ng-bind="user"></span>
                </li>
                <li class="nav-item">
                    <a href="" class="nav-link" ng-show="loggedIn" ng-click="logout()" ng-bind="logoutText"></a>
                </li>
            </ul>
        </div>
    </nav>

    <div ng-view class='container' style='margin-top: 150px'></div>

@section scripts {
    <script src='https://code.jquery.com/jquery-3.3.1.slim.min.js' integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo' crossorigin='anonymous'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js' integrity='sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1' crossorigin='anonymous'></script>
    <script src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js' integrity='sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM' crossorigin='anonymous'></script>
    <script src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular-route.js'></script>
    <script src='https://secure.aadcdn.microsoftonline-p.com/lib/0.2.3/js/msal.min.js'></script>
    <script src='js/twitter-text-3.0.1.min.js'></script>
    <script src='@("app.js".AppendVersion())'></script>
}
